<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="{Binding UC_Width}" d:DesignHeight="{Binding UC_Height}"
             Width="{Binding UC_Width}" Height="{Binding UC_Height}"
			 x:Class="LogicSimulator.Views.Shapes.LightBulb"
			 Tag="Gate">
	
	<Canvas Tag="Gate">
		<Border Tag="Body" Margin="25 10" Background="Gray" BorderThickness="{Binding BodyStrokeSize}" BorderBrush="black" Width="50" Height="50" CornerRadius="50">
		</Border>
	</Canvas>
</UserControl>
